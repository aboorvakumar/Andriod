<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:fillViewport="true"
    tools:context="com.wintwin.admin.bas.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff6f6"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:background="#ff6600"

            android:onClick="onButtonClick"
            android:src="@drawable/service1" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn1"
            android:background="#ebebe0"
            android:src="@drawable/service2" />

        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/btn2"
            android:layout_centerHorizontal="true"
            android:background="#00ff00"
            android:src="@drawable/service3" />

        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn3"
            android:background="#9999ff"
            android:src="@drawable/service4" />

        <ImageButton
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="#cc0000"
            android:src="@drawable/service5" />

        <ImageButton
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:src="@drawable/service6" />

        <ImageButton
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#99ccff"
            android:src="@drawable/service7" />

        <ImageButton
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#999966"
            android:src="@drawable/service8" />

        <ImageButton
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#f9f9d6"
            android:src="@drawable/service9" />

        <ImageButton
            android:id="@+id/btn10"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ffff66"
            android:src="@drawable/service10" />

        <ImageButton
            android:id="@+id/btn11"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ff99e6"
            android:src="@drawable/service11" />

        <ImageButton
            android:id="@+id/btn12"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#f9f7f7"
            android:src="@drawable/service12" />


    </LinearLayout>

</ScrollView>